<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Header" parent="@android:style/TextAppearance">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">30dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="RadioButton" parent="Theme.AppCompat.Light">
        <item name="android:gravity">center</item>
        <item name="android:textSize">18dp</item>
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:background">@drawable/radio_selector</item>
        <item name="android:button">@android:color/transparent</item>
    </style>

    <style name="MySeekBar" parent="Widget.AppCompat.SeekBar">
        <item name="android:max">3</item>
        <item name="android:progress">2</item>
        <item name="android:progressDrawable">@drawable/seekbar_drawable</item>
        <item name="android:thumbTint">@color/dark_beige</item>
    </style>
</resources>