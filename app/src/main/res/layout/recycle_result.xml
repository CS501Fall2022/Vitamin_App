<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/resultIntro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.1" />

    <TextView
        android:id="@+id/resultDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.6" />

    <TextView
        android:id="@+id/vit_1"
        style="@style/vitaminDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/vit_1_button"
        app:layout_constraintStart_toStartOf="@+id/vit_1_button"
        app:layout_constraintTop_toBottomOf="@+id/resultDescription"
        app:layout_constraintVertical_bias="0.08" />

    <Button
        android:id="@+id/vit_1_button"
        style="@style/browserButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_bias="0.15"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vit_1"
        app:layout_constraintVertical_bias="0" />

    <TextView
        android:id="@+id/vit_2"
        style="@style/vitaminDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/vit_2_button"
        app:layout_constraintStart_toStartOf="@+id/vit_2_button"
        app:layout_constraintTop_toBottomOf="@+id/resultDescription"
        app:layout_constraintVertical_bias="0.08" />

    <Button
        android:id="@+id/vit_2_button"
        style="@style/browserButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_bias="0.85"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vit_2"
        app:layout_constraintVertical_bias="0" />

    <TextView
        android:id="@+id/vit_3"
        style="@style/vitaminDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/vit_3_button"
        app:layout_constraintStart_toStartOf="@+id/vit_3_button"
        app:layout_constraintTop_toBottomOf="@+id/vit_1_button"
        app:layout_constraintVertical_bias="0.29" />

    <Button
        android:id="@+id/vit_3_button"
        style="@style/browserButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vit_3"
        app:layout_constraintVertical_bias="0" />

    <TextView
        android:id="@+id/vit_4"
        style="@style/vitaminDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/vit_4_button"
        app:layout_constraintStart_toStartOf="@+id/vit_4_button"
        app:layout_constraintTop_toBottomOf="@+id/vit_2_button"
        app:layout_constraintVertical_bias="0.29" />

    <Button
        android:id="@+id/vit_4_button"
        style="@style/browserButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.85"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vit_4"
        app:layout_constraintVertical_bias="0.0" />


</androidx.constraintlayout.widget.ConstraintLayout>